include ../data/header

- var headerModClass = headerMod && "header--" + headerMod

header.header(class= headerModClass)
  .header__wrapper
    -var isPageMain = currentPage === SiteUrl.MAIN
    a.header__logo(href= !isPageMain && SiteUrl.MAIN, aria-label= !isPageMain && "Переход на главную") Логотип
    nav.main-nav
      button.main-nav__toggle.btn-reset(type="button", aria-label="Переключатель отображения меню", aria-pressed="false")
        +icon("icon-burger", 20, 20)
      .main-nav__wrapper
        ul.main-nav__list
          each link in headerLinks
            li
            -var isCurrentLink = link.href === currentPage
              a.main-nav__link(class= isCurrentLink && "main-nav__link--active", href= !isCurrentLink && link.href)=link.text
